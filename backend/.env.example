# Set to "true" for SQLite (recommended for development)
# Set to "false" for PostgreSQL
USE_SQLITE=true

# PostgreSQL Configuration (only needed if USE_SQLITE=false)
DB_USER=postgres
DB_PASSWORD=your_password_here
